<h1>Basic Information</h1>
<%= form_for @offering, url: wizard_path, method: :put, html: { class: 'form-horizontal' } do |offer_form| %>
  <fieldset>
    <legend>Basic Information</legend>
    <div class="form-group">
      <%= offer_form.label 'Offer Name', class: 'col-md-2 control-label' %>
      <div class="col-md-5">
        <%= offer_form.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </fieldset>
  <hr/>
  <%= offer_form.submit 'Family Information', class: 'btn btn-primary' %>
<% end %>

